pipeline {
    agent any
    
    environment {
        CPPTEST_HOME = '/mnt/c/Users/danie/parasoft-std/cpptest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "Pulling latest code from GitHub"
                git branch: 'main', url: 'https://github.com/zuwasi/timer-demo'
            }
        }
        
        stage('Build') {
            steps {
                echo "Building timer application"
                sh 'make clean'
                sh 'make'
            }
        }
        
        stage('Parasoft Analysis') {
            steps {
                echo "Running Parasoft C++test analysis"
                sh '''
                    WINDOWS_IP=$(ip route | grep default | awk '{print $3}')
                    ${CPPTEST_HOME}/cpptestcli \
                    -config "builtin://Recommended Rules" \
                    -compiler gcc_13-64 \
                    -module . \
                    -include "${WORKSPACE}/*.c" \
                    -include "${WORKSPACE}/*.h" \
                    -report "${WORKSPACE}/parasoft_report" \
                    -property parasoft.eula.accepted=true \
                    -property cpptest.license.use_network=true \
                    -property license.network.url=https://${WINDOWS_IP}:8443 \
                    -property license.network.use.specified.server=true \
                    -property license.network.auth.enabled=true \
                    -property license.network.user=admin \
                    -property license.network.password=admin \
                    -property cpptest.license.network.edition=server_compliance_edition
                '''
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'parasoft_report/**/*', allowEmptyArchive: true
        }
        success {
            echo 'Analysis completed successfully!'
        }
        failure {
            echo 'Analysis failed!'
        }
    }
}
